{
  "env": {
    "es6": true,
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "plugins": ["react", "jest"],
  "rules": {
    "prettier/prettier": ["error"],
    "eqeqeq": "error",
    "no-trailing-spaces": "error",
    "no-console": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  }
}
